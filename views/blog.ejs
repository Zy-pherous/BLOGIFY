<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include("./partials/head") %>
</head>
<body>
    <%- include("./partials/nav") %>
    <h1><%=blog.title  %></h1>
    <img src="<%=blog.coverImageURL%>" width="700px"> </img>
    <pre><%=blog.body %></pre>
    <div class="container mt-4"> 
        <img src="<%=blog.createdBy.profileImageURL %>" width="50px" alt="">
        <%=blog.createdBy.fullName%>
    </div>
    <div>
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%=blog._id  %>" method="post">
                <div class="mb-4"> 
                    <input type="text" name="content" placeholder="Type your comment" class="form-control">
                    <button type="submit" class="btn btn-sm btn-primary"> Add</button>
                </div>
            </form>
         
        <% } %>
    </div>
    <div>
        <% comments.forEach(comment => { %>
         <div>
            <img src="<%=comment.createdBy.profileImageURL %>" width="50px" alt="">
        <%=comment.createdBy.fullName%>
        <pre><%=comment.content %></pre>
         </div>
        <% }) %>
    </div>
    <%- include("./partials/scripts") %>
</body>
</html>